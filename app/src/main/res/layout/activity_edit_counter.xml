<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alexzichongyu.mycounter.editCounter">


    <LinearLayout
        android:layout_width="393dp"
        android:layout_height="601dp"
        android:orientation="vertical"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="55.03"
            android:text="TextView"
            android:textAlignment="viewStart"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp"
            android:layout_weight="3.81"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="62dp"
                android:fontFamily="sans-serif"
                android:text="Current Value"
                android:textAppearance="@android:style/TextAppearance.Material.DialogWindowTitle"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="64dp"
                tools:layout_editor_absoluteY="41dp"
                android:layout_weight="1.25" />

            <TextView
                android:id="@+id/textView_currentValue"
                android:layout_width="163dp"
                android:layout_height="62dp"
                android:text="5"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Material.Title"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="281dp"
                tools:layout_editor_absoluteY="42dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <Button
                android:id="@+id/button_subtract"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="88dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_bright"
                android:text="-"
                android:textAlignment="center"
                android:textSize="30sp"
                android:layout_margin="20dp"
                tools:layout_editor_absoluteX="281dp"
                tools:layout_editor_absoluteY="117dp" />

            <Button
                android:id="@+id/button_add"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="88dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:layout_margin="20dp"
                android:background="@android:color/holo_blue_bright"
                android:text="+"
                android:textAlignment="center"

                android:textSize="30sp"
                tools:layout_editor_absoluteX="70dp"
                tools:layout_editor_absoluteY="117dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="175dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:text="Initial Value    "
                android:textAlignment="textEnd"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="46dp"
                tools:layout_editor_absoluteY="275dp" />

            <TextView
                android:id="@+id/textView_initialValue"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="200"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView3"
                app:layout_constraintHorizontal_bias="0.781"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView3"
                app:layout_constraintVertical_bias="0.0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_reset"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0.04"
                android:background="@color/colorPrimaryDark"
                android:text="Reset to initial value"


                tools:layout_editor_absoluteY="117dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="comment"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.644"
            tools:layout_editor_absoluteX="46dp"
            android:layout_weight="20.52" />


        <TextView
            android:id="@+id/editText_changeComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100.58"
            android:text="TextView"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_save"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@android:color/holo_red_dark"
            android:text="SAVE CHANGE"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="524dp" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
